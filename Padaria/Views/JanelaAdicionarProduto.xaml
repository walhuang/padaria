<Window x:Class="Padaria.JanelaAdicionarProduto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Padaria"
        mc:Ignorable="d"
        Title="Adicionar Produto - Sistema de Padaria Cremosa" Height="400" Width="600">
    <Grid>
        <Label x:Name="label" Content="Aguardando Leitura do Produto" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Center" FontSize="24"/>
        <TextBox x:Name="txAdicionarProduto" HorizontalAlignment="Center" Margin="0,0,100,0" TextWrapping="Wrap" Text="Aguardando Produto" VerticalAlignment="Center" FontSize="24"/>
        <Button x:Name="btnAdicionarProduto" Content="LER" HorizontalAlignment="Center" Margin="200,0,0,0" VerticalAlignment="Center" FontSize="24" Click="btnAdicionarProdutoClick"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="131,239,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txQuantidade" HorizontalAlignment="Left" Height="23" Margin="206,251,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnPara" Content="btnPara" HorizontalAlignment="Left" Margin="417,274,0,0" VerticalAlignment="Top" Width="75" Click="btnParaClick"/>

    </Grid>
</Window>
