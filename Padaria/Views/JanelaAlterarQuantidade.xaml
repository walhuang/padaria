<Window x:Class="Padaria.Views.JanelaAlterarQuantidade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Padaria.Views"
        mc:Ignorable="d"
        Title="JanelaAlterarQuantidade" Height="450" Width="800">
    <Grid Background="#FF3F978F">
        <Label Content="Insira nova quantidade" HorizontalAlignment="Left" Margin="201,130,0,0" VerticalAlignment="Top" FontSize="20" Foreground="#FFF9F2F2"/>
        <TextBox x:Name="txQuantidade" HorizontalAlignment="Left" Height="23" Margin="443,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnQuantidade" Content="Inserir" HorizontalAlignment="Left" Margin="443,212,0,0" VerticalAlignment="Top" Width="75" Click="btnQuantidadeClick" Cursor="Hand"/>
        <Image Margin="85,114,628,214" Source="/Padaria;component/quantidade.png" Stretch="Fill"/>

    </Grid>
</Window>
